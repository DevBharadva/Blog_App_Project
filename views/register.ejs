<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register Form</title>
    <style>
        :root {
            --primary-bg-color: linear-gradient(135deg, #b09aff 0%, #3781aa 100%);
            --primary-text-color: #fff;
            --form-bg-color: #333;
            --input-bg-color: #444;
            --input-border-color: #555;
            --button-bg-color: #ff758c;
            --button-hover-bg-color: #ff6175;
            --button-active-bg-color: #ff495e;
        }

        [data-theme="light"] {
            --primary-bg-color: linear-gradient(135deg, #f3e1ff 0%, #f7f9fb 100%);
            --primary-text-color: #333;
            --form-bg-color: #f9f9f9;
            --input-bg-color: #fff;
            --input-border-color: #ddd;
            --button-bg-color: #3781aa;
            --button-hover-bg-color: #2c699c;
            --button-active-bg-color: #23537b;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background: var(--primary-bg-color);
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            transition: background 0.3s ease;
        }
    
        h1 {
            color: var(--primary-text-color);
            font-size: 32px;
            text-align: center;
            margin-bottom: 30px;
        }
    
        form {
            background: var(--form-bg-color); 
            color: var(--primary-text-color); 
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
        }
    
        label {
            display: block;
            margin-bottom: 10px;
            font-size: 14px;
            color: var(--primary-text-color);
        }
    
        input[type="text"], input[type="password"] {
            width: 100%;
            padding: 12px;
            border: 2px solid var(--input-border-color); 
            border-radius: 6px;
            margin-bottom: 20px;
            font-size: 14px;
            background-color: var(--input-bg-color); 
            color: var(--primary-text-color);
            box-sizing: border-box;
        }
    
        a {
            display: block;
            margin: 10px 0;
            font-size: 14px;
            color: var(--primary-text-color);
        }
    
        button {
            background-color: var(--button-bg-color);
            color: white;
            border: none;
            padding: 14px 28px;
            border-radius: 6px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease, transform 0.2s ease;
            width: 100%;
        }
    
        button:hover {
            background-color: var(--button-hover-bg-color);
            transform: translateY(-2px);
        }
    
        button:active {
            background-color: var(--button-active-bg-color);
            transform: translateY(0);
        }

        /* Toggle Button Styles */
        .theme-toggle {
            position: absolute;
            top: 20px;
            right: 20px;
            background: none;
            border: none;
            cursor: pointer;
            font-size: 24px;
            color: var(--primary-text-color);
            transition: color 0.3s ease;
        }
    </style>
</head>
<body data-theme="dark">
    <button class="theme-toggle" id="theme-toggle" aria-label="Toggle dark/light mode">
        üåô
    </button>

    <form action="/api/user/register" method="post">
        <h1>Register Form</h1>
        <label for="firstname">First Name:</label>
        <input type="text" name="firstname" id="firstname" placeholder="Enter your first name" required>
        
        <label for="lastname">Last Name:</label>
        <input type="text" name="lastname" id="lastname" placeholder="Enter your last name" required>
        
        <label for="email">Email:</label>
        <input type="text" name="email" id="email" placeholder="Enter your email" required>
        
        <label for="password">Password:</label>
        <input type="password" name="password" id="password" placeholder="Enter your password" required>
        <a href="/api/user/login">You already have an account?</a>
        <button type="submit">Register Now</button>
    </form>

    <script>
        const themeToggle = document.getElementById('theme-toggle');
        const body = document.body;

        themeToggle.addEventListener('click', () => {
            if (body.getAttribute('data-theme') === 'dark') {
                body.setAttribute('data-theme', 'light');
                themeToggle.textContent = 'üåô'; // Moon icon for light mode
            } else {
                body.setAttribute('data-theme', 'dark');
                themeToggle.textContent = '‚òÄÔ∏è'; // Sun icon for dark mode
            }
        });
    </script>
</body>
</html>
